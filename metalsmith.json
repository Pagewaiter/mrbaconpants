{
  "source": "./_posts",
  "destination": "./_site",
  "metadata": {
    "title": "Mr. Baconpants",
    "description": "a blog about bacon, beer, and everything else!"
  },
  "plugins": {
    "metalsmith-ignore": [
      "_drafts/*",
      "_posts/index.md"
    ],
    "metalsmith-drafts": {},
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":collection/:title"
    },
    "metalsmith-collections": {
       "articles": {
        "pattern": "*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-templates": {
      "engine": "handlebars",
      "directory": "_layouts"
    }
  }
}
